# Florence Guide Management System - Environment Configuration
# Copy this file to .env.local and update the values for your environment
# NEVER commit .env.local to version control

# =====================================================
# Database Configuration
# =====================================================
DB_HOST=localhost
DB_NAME=florence_guides
DB_USER=root
DB_PASS=

# =====================================================
# Bokun API Configuration
# =====================================================
# Your Bokun vendor ID (found in Bokun dashboard)
BOKUN_VENDOR_ID=96929

# API Key from Bokun API settings
BOKUN_API_KEY=your_api_key_here

# API Secret from Bokun API settings
BOKUN_API_SECRET=your_api_secret_here

# Bokun API base URL
BOKUN_BASE_URL=https://api.bokun.is

# =====================================================
# Application Settings
# =====================================================
# Environment: development or production
APP_ENV=development

# Debug mode: true enables detailed error messages
APP_DEBUG=true

# Base URL for the application
APP_URL=http://localhost:5173

# API URL (backend endpoint)
API_URL=http://localhost:8080/api

# =====================================================
# Security Settings
# =====================================================
# Session lifetime in seconds (default: 24 hours)
SESSION_LIFETIME=86400

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000

# Encryption key for sensitive data (REQUIRED for Bokun API credentials)
# Generate with: php -r "echo base64_encode(random_bytes(32));"
# Or: openssl rand -base64 32
# IMPORTANT: Keep this key safe! Losing it means losing access to encrypted data.
ENCRYPTION_KEY=

# =====================================================
# Sentry Error Tracking (Backend)
# =====================================================
# Sentry DSN from your Sentry project settings
# Format: https://{public_key}@{host}/{project_id}
SENTRY_DSN=

# Environment name for Sentry (development, staging, production)
SENTRY_ENVIRONMENT=production

# Optional: Release version for tracking deployments
# SENTRY_RELEASE=florence-guides@1.0.0

# =====================================================
# Production Configuration Example
# =====================================================
# For production deployment, use these values:
#
# DB_HOST=localhost
# DB_NAME=u803853690_withlocals
# DB_USER=u803853690_withlocals
# DB_PASS=your_production_password
#
# APP_ENV=production
# APP_DEBUG=false
# APP_URL=https://withlocals.deetech.cc
# API_URL=https://withlocals.deetech.cc/api
#
# CORS_ALLOWED_ORIGINS=https://withlocals.deetech.cc
